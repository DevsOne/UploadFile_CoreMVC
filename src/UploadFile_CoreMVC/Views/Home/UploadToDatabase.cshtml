@model UploadFile_CoreMVC.Models.UploadDataViewModel
@{
    ViewBag.Title = "UploadToDatabase";
}

<br />
<a asp-action="Index" asp-controller="Home">Home</a>
<br />
<a asp-action="LoadFiles" asp-controller="Home">Load Files From Db</a>
<br />
<a asp-action="DisplayFilesFromFolder" asp-controller="Home">Load Files From Folder</a>
<br />

<h4>Upload To Database</h4>

<form asp-action="UploadToDb" asp-controller="Home" method="post" class="form-horizontal" enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="UserName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="text" asp-for="UserName" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Files" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="file" asp-for="Files" multiple class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Upload" />
        </div>
    </div>
</form>


